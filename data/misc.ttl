        a owl:Restriction ;
        owl:onProperty :head ;
        owl:someValuesFrom :Preposition ])] .

:VerbPhrase a owl:Class ;
  rdfs:label "verb phrase"@en ;
  rdfs:subClassOf ontolex:MultiWordExpression ;
